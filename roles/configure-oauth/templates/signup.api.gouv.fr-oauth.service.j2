[Unit]
Description=Signup OAuth
After=network-online.target

[Service]
Type=simple

User={{ app_user }}
Group={{ app_user }}

EnvironmentFile=/etc/signup.api.gouv.fr-oauth.conf
ExecStart=/opt/apps/signup.api.gouv.fr-oauth/signup.api.gouv.fr-oauth/bin/www

Restart=on-failure
TimeoutStopSec=30

[Install]
WantedBy=multi-user.target
